case "${ENVIRONMENT}" in
  "local")
    if [[ -f ".env.local" ]]; then
      dotenv .env
      dotenv .env.local
    fi
    ;;

  "dev")
    if [[ -f ".env.local" ]]; then
      dotenv .env
      dotenv .env.dev
    fi
    ;;

  "prod")
    if [[ -f ".env.local" ]]; then
      dotenv .env
      dotenv .env.prod
    fi
    ;;
  *)
    if [[ -f ".env" ]]; then
      dotenv
    fi
    ;;
esac